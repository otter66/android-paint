<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <woowacourse.paint.PaintView
            android:id="@+id/paint_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <woowacourse.paint.PenToolView
            android:id="@+id/pen_tool_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btn_open_pen_tool"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_open_pen_tool"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="16dp"
            android:contentDescription="펜 선택 버튼"
            android:src="@drawable/ic_pen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_eraser"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_eraser"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_eraser"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_shape_rectangle"
            app:layout_constraintStart_toEndOf="@+id/btn_open_pen_tool" />

        <ImageView
            android:id="@+id/btn_shape_rectangle"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_shape_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_shape_circle"
            app:layout_constraintStart_toEndOf="@+id/btn_eraser" />

        <ImageView
            android:id="@+id/btn_shape_circle"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_shape_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_shape_rectangle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>